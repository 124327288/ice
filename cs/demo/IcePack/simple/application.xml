<icepack>

  <variable name="ice.dir" value="../../.."/>

  <application name="Simple">

     <node name="node">

       <server name="Server" kind="cpp" exe="${ice.dir}/demo/IcePack/simple/server" activation="on-demand">
 
         <adapters>
           <adapter name="Hello" endpoints="tcp:udp" register="true">
             <object identity="hello1" type="::Demo::Hello"/>
           </adapter>
         </adapters>
  
         <properties>
	   <property name="Identity" value="hello1"/>
         </properties>
       </server>

     </node>

  </application>

</icepack>
