<icegrid>
  <application name="Templates">

    <server-template id="IcePatch2">

       <parameter name="id" default="${application}.IcePatch2"/>
       <parameter name="endpoints" default="default"/>
       <parameter name="admin-endpoints" default="default"/>
       <parameter name="directory"/>

       <server id="${id}" exe="icepatch2server" application-distrib="false" activation="on-demand">

         <adapter name="IcePatch2" endpoints="${endpoints}">
           <object identity="${id}/server" type="::IcePatch2::FileServer"/>
         </adapter>

         <adapter name="IcePatch2.Admin" endpoints="${admin-endpoints}">
           <object identity="${id}/admin" type="::IcePatch2::Admin"/>
         </adapter>

         <property name="IcePatch2.InstanceName" value="${id}"/>
         <property name="IcePatch2.Directory" value="${directory}"/>

       </server>

    </server-template>

    <server-template id="Glacier2">
        
      <parameter name="instance-name" default="${application}.Glacier2"/>
      <parameter name="client-endpoints"/>
      <parameter name="session-timeout"/>
      <parameter name="server-endpoints"/>
      <parameter name="session-manager"/>
      <parameter name="server-adapter-id" default=""/>
      <parameter name="passwords-file" default="passwords"/>      
      <parameter name="permission-verifier" default=""/>

      <server id="${instance-name}" exe="glacier2router">
         <adapter name="Glacier2.Client" id=""
                  endpoints="${client-endpoints}"/>

         <adapter name="Glacier2.Server" id="${server-adapter-id}"
                  endpoints="${server-endpoints}"/>

         <adapter name="Glacier2.Admin" id=""
                  endpoints="tcp -h 127.0.0.1" register-process="true"/>                 

         <property name="Glacier2.InstanceName" value="${instance-name}"/>
         <property name="Glacier2.SessionTimeout" value="${session-timeout}"/>
         <property name="Glacier2.CryptPasswords" value="${passwords-file}"/>
         <property name="Glacier2.PermissionVerifier" value="${permission-verifier}"/>
         <property name="Glacier2.SessionManager"  value="${session-manager}"/>

         <!-- TODO: SSL configuration -->
     </server>

    </server-template>
   
  </application>
</icegrid>

