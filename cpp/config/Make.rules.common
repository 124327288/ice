UNAME		= $(shell uname)

#
# CygWin on Windows XP x86
#
ifeq ($(UNAME), CYGWIN_NT-5.1)
	CygWin	= yes
	MinGW	= yes
endif

#
# CygWin on Windows XP x64
#
ifeq ($(UNAME), CYGWIN_NT-5.1-WOW64)
	CygWin	= yes
	MinGW	= yes
endif

#
# CygWin on Windows 7 x64
#
ifeq ($(UNAME), CYGWIN_NT-6.1)
	CygWin	= yes
	MinGW	= yes
endif

#
# CygWin on Windows 7 x64
#
ifeq ($(UNAME), CYGWIN_NT-6.1-WOW64)
	CygWin	= yes
	MinGW	= yes
endif
