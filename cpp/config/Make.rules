SHELL		= /bin/sh

VERSION		= 0.0.1

STLPORT		= $(HOME)/STLport-4.0

bindir		= $(top_srcdir)/bin
libdir		= $(top_srcdir)/lib
includedir	= $(top_srcdir)/include
iidldir		= $(top_srcdir)/iidl

CXX		= c++
CXXFLAGS	= -g -fPIC -Wall
CPPFLAGS	= -I. -I$(includedir) -I$(STLPORT)/stlport
LDFLAGS		= -L$(libdir) -L$(STLPORT)/lib
LIBS		= -lIce -lstlport_gcc_debug

.SUFFIXES:
.SUFFIXES:	.cpp .o

.cpp.o:
	$(CXX) -c $(CPPFLAGS) $(CXXFLAGS) $<

all:: $(SRCS) $(TARGETS)

depend:: $(SRCS)
	if test -n "$(SRCS)" ; then \
	    $(CXX) -DMAKEDEPEND -M $(CXXFLAGS) $(CPPFLAGS) $(SRCS) | \
	    perl $(top_srcdir)/config/makedepend.pl ; \
	fi

clean::
	-rm -f $(TARGETS)
	-rm -f core *.o *.bak
