top_srcdir	= ../../..

CLIENT		= client
SERVER		= server

TARGETS		= $(CLIENT) $(SERVER)

OBJS		= HelloSession.o

COBJS		= Client.o

SOBJS		= HelloSessionI.o \
		  Server.o

SRCS		= $(OBJS:.o=.cpp) \
		  $(COBJS:.o=.cpp) \
		  $(SOBJS:.o=.cpp)

include $(top_srcdir)/config/Make.rules

CPPFLAGS	:= -I. $(CPPFLAGS)
SLICECMD	= $(SLICE2CPP) -I$(slicedir)

$(CLIENT): $(OBJS) $(COBJS)
	rm -f $@
	$(CXX) $(CXXFLAGS) $(LDFLAGS) -o $@ $(OBJS) $(COBJS) -lGlacier $(SSLLIBS) $(LIBS)

$(SERVER): $(OBJS) $(SOBJS)
	rm -f $@
	$(CXX) $(CXXFLAGS) $(LDFLAGS) -o $@ $(OBJS) $(SOBJS) -lGlacier $(LIBS)

HelloSession.h HelloSession.cpp: HelloSession.ice $(SLICE2CPP)
	rm -f HelloSession.h HelloSession.cpp
	$(SLICECMD) HelloSession.ice

clean::
	rm -f HelloSession.h HelloSession.cpp

include .depend
