<icepack>

  <server name="${name}" kind="java-icebox" endpoints="default" activation="on-demand">
    <include name="Hello" descriptor="service.xml"/>

    <properties>
      <!-- Make sure the Hello service uses the IceBox communicator -->
      <property name="IceBox.UseSharedCommunicator.Hello" value="1"/>
    </properties>

    <target name="debug">
      <properties>
        <property name="Ice.Network.Trace" value="1"/>
        <property name="Ice.Network.Protocol" value="1"/>
      </properties>
    </target>
  
  </server>

</icepack>