<project name="demo_Ice_helloMIDlet" default="all" basedir=".">

    <!-- set global properties for this build -->
    <property name="top.dir" value="../../.."/>

    <!-- Include common definitions -->
    <import file="${top.dir}/config/common.xml"/>

    <target name="init" depends="config-init"/>

    <target name="generate" depends="init">
        <!-- Create the output directory for generated code -->
        <mkdir dir="${generated.dir}"/>
        <slice2javae outputdir="${generated.dir}">
            <fileset dir="../hello" includes="Hello.ice"/>
        </slice2javae>
    </target>

    <target name="compile" depends="generate">
        <mkdir dir="${class.dir}"/>
	<javac srcdir="${generated.dir}" destdir ="${class.dir}" source="1.3" debug="${debug}">
	    <bootclasspath refid="bootclasspath"/>  
 	    <classpath refid="ice.classpath"/>
	</javac>
        <javac srcdir="." destdir="${class.dir}" source="1.3" excludes="generated/**" debug="${debug}">
	    <bootclasspath refid="bootclasspath"/>  
            <classpath>
	       <path refid="ice.classpath"/>
	       <pathelement path="./classes"/>
	    </classpath>
        </javac>
    </target>

    <target name="client-jar" depends="compile">
        <mkdir dir="./tmp"/>
	<copy file="config" todir="./classes"/>
	      
	<manifest file="MANIFEST.MF">
	    <attribute name="Microedition-Configuration" value="CLDC-1.0"/>
	    <attribute name="MIDlet-Name" value="ClientMIDlet"/>
            <attribute name="MIDlet-Vendor" value="ZeroC"/>
            <attribute name="MIDlet-1" value="ClientMIDlet, ,ClientMIDlet"/>
	    <attribute name="MIDlet-Version" value="1.0"/>
	    <attribute name="MicroEdition-Profile" value="MIDP-2.0"/>
        </manifest>
	      
	<jar destfile="./tmp/ClientMIDlet.jar" manifest="./MANIFEST.MF" excludes="ServerMIDlet*.class" basedir="./classes"/>
        <jar destfile="./tmp/ClientMIDlet.jar" basedir="${lib.dir}" excludes="IceE.jar" update="true"/>
        <exec executable="${WTK}/bin/preverify">
            <arg line="-classpath ${WTKLIBS}"/>
            <arg line="-d ."/>
	    <arg line="./tmp/ClientMIDlet.jar"/>
        </exec>
    </target>

    <target name="server-jar" depends="compile">
        <mkdir dir="./tmp"/>
	<copy file="config" todir="./classes"/>
	<manifest file="MANIFEST.MF">
	    <attribute name="Microedition-Configuration" value="CLDC-1.0"/>
	    <attribute name="MIDlet-Name" value="ServerMIDlet"/>
            <attribute name="MIDlet-Vendor" value="ZeroC"/>
            <attribute name="MIDlet-1" value="ServerMIDlet, ,ServerMIDlet"/>
	    <attribute name="MIDlet-Version" value="1.0"/>
	    <attribute name="MicroEdition-Profile" value="MIDP-2.0"/>
        </manifest>

        <jar destfile="./tmp/ServerMIDlet.jar" manifest="./MANIFEST.MF" excludes="ClientMIDlet.class"
		basedir="./classes"/>
        <jar destfile="./tmp/ServerMIDlet.jar" basedir="${lib.dir}" excludes="IceE.jar" update="true"/>
        <exec executable="${WTK}/bin/preverify">
           <arg line="-classpath ${WTKLIBS}"/>
            <arg line="-d ."/>
	    <arg line="./tmp/ServerMIDlet.jar"/>
        </exec>
    </target>

    <target name="all" depends="client-jar,server-jar"/>

    <target name="clean">
        <delete dir="${class.dir}"/>
	<delete dir="./tmp"/>
	<delete file="./ClientMIDlet.jar"/>
	<delete file="./ServerMIDlet.jar"/>
    </target>

</project>
